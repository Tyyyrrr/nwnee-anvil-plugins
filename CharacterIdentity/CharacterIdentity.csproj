    <Reference Include="NWN.Core" Private = "false" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\MySQLClient\MySQLClient.csproj" Private="false" />
    <ProjectReference Include="..\ServerData\ServerData.csproj" Private="false" />
    <ProjectReference Include="..\CharactersRegistry\CharactersRegistry.csproj" Private="false" />
    <ProjectReference Include="..\CharacterAppearance\CharacterAppearance.csproj" Private="false" />
    <ProjectReference Include="..\ExtensionsPlugin\ExtensionsPlugin.csproj" Private="false" />
    <ProjectReference Include="..\EasyConfig\EasyConfig.csproj" Private="false" />
    <ProjectReference Include="..\NuiMVC\NuiMVC.csproj" Private="false" />
  </ItemGroup>

</Project>