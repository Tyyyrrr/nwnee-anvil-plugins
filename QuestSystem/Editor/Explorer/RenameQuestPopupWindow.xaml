<Window x:Class="QuestEditor.Explorer.RenameQuestPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuestEditor.Explorer"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Title="Rename Quest"
        Background="{StaticResource ControlBackground}">
    <StackPanel Margin="20">
        <TextBox x:Name="RenameBox"
                 Width="250"
                 Text="{Binding Rename, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource StyledTextBox}"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Background="{DynamicResource ControlBackground}">
            <Button Content="OK" Width="80" Margin="0,0,10,0" IsDefault="True" Click="Ok_Click" Style="{StaticResource StyledButton}"/>
            <Button Content="Cancel" Width="80" IsCancel="True" Style="{StaticResource StyledButton}"/>
        </StackPanel>
    </StackPanel>
</Window>
