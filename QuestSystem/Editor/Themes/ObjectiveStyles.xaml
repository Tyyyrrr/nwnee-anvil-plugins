                                  Style="{StaticResource StyledTextBox}"/>

                        <TextBlock  Grid.Row="2" 
                                    Grid.Column="0"
                                    Text="Tag:" 
                                    Style="{StaticResource StyledTextBlock}"/>
                        <TextBox  Grid.Row="2" 
                                  Grid.Column="1"
                                  Text="{Binding Tag, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                  Style="{StaticResource StyledTextBox}"/>
                    </Grid>
