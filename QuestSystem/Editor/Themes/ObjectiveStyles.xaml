                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Grid.Column="0"
                                   Text="Interaction:"
                                   Style="{StaticResource StyledTextBlock}"/>
                        <ComboBox Grid.Row="0"
                                  Grid.Column="1"
                                  ItemsSource="{Binding InteractionTypes}"
                                  SelectedItem="{Binding Interaction}"/>

                        <TextBlock  Grid.Row="1" 
                                    Grid.Column="0"
                                    Text="ResRef:" 
                                    Style="{StaticResource StyledTextBlock}"/>
                        <TextBox  Grid.Row="1" 
                                  Grid.Column="1"
