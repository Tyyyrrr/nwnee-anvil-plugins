<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:graph="clr-namespace:QuestEditor.Graph">

    <graph:BezierPointConverter x:Key="BPC"/>

    <Style TargetType="graph:ConnectionControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type graph:ConnectionControl}">
                    <Path Stroke="{Binding FromToColorGradientBrush}" 
                        StrokeThickness="3"
                        Stretch="None"
                        SnapsToDevicePixels="True">
                        <Path.Data>
                            <PathGeometry>
                                <PathGeometry.Figures>
                                    <PathFigureCollection>
                                        <PathFigure 
                                            StartPoint="{Binding FromTo,
                                                                 Converter={StaticResource BPC},
                                                                 ConverterParameter=1}">
                                            <BezierSegment 
                                                Point1="{Binding FromTo,
                                                                 Converter={StaticResource BPC},
                                                                 ConverterParameter=2}"
                                                Point2="{Binding FromTo,
                                                                 Converter={StaticResource BPC},
                                                                 ConverterParameter=3}"
                                                Point3="{Binding FromTo,
                                                                 Converter={StaticResource BPC},
                                                                 ConverterParameter=4}" />
                                        </PathFigure>
                                    </PathFigureCollection>
                                </PathGeometry.Figures>
                            </PathGeometry>
                        </Path.Data>
                    </Path>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="ConnectionSocketControlBaseStyle" TargetType="graph:ConnectionSocketControl">
        <Setter Property="CanBeTargeted" Value="{Binding CanBeTargeted}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="graph:ConnectionSocketControl">
                    <Border x:Name="PART_Border"
                        CornerRadius="100"
                        Height="10" Width="10"
                        BorderThickness="3"
                        Background="Black"
                        BorderBrush="{TemplateBinding SocketColorBrush}"
                        HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                        ClipToBounds="True"/>
                    <ControlTemplate.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True"/>
                                <Condition Property="CanBeTargeted" Value="True"/>
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter Property="BorderThickness" Value="4" TargetName="PART_Border"/>
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ConnectionSocketOutputStyle" TargetType="graph:ConnectionSocketControl" BasedOn="{StaticResource ConnectionSocketControlBaseStyle}">
        <Setter Property="ContextMenu">
            <Setter.Value>
                <ContextMenu>
                    <MenuItem Header="Output mode">
                        <MenuItem Command="{Binding SetModeCommand}" CommandParameter="{x:Static graph:OutputMode.Default}"  IsEnabled="{Binding IsDefaultModeInactive}">
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Default"/>
                                    <CheckBox Visibility="{Binding IsDefaultModeActive, Converter={StaticResource BoolToVis}}" IsChecked="True"/>
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>
                        <MenuItem  Command="{Binding SetModeCommand}" CommandParameter="{x:Static graph:OutputMode.Loop}" IsEnabled="{Binding IsLoopModeInactive}">
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Loop"/>
                                    <CheckBox Visibility="{Binding IsLoopModeActive, Converter={StaticResource BoolToVis}}" IsChecked="True"/>
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>
                        <MenuItem Command="{Binding SetModeCommand}" CommandParameter="{x:Static graph:OutputMode.Final}"  IsEnabled="{Binding IsFinalModeInactive}">
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Final"/>
                                    <CheckBox Visibility="{Binding IsFinalModeActive, Converter={StaticResource BoolToVis}}" IsChecked="True"/>
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>
                    </MenuItem>
                </ContextMenu>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>