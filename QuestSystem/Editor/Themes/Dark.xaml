<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- BASE NEUTRALS-->
    <Color x:Key="NodeBackgroundColor">#1E1F22</Color>
    <Color x:Key="NodeBorderNeutral">#3A3D45</Color>
    <Color x:Key="HoverColor">#2A2D33</Color>
    <Color x:Key="SelectionColor">#3A4A63</Color>
    <Color x:Key="TextColor">#E6E6E6</Color>
    <Color x:Key="GraphBackgroundColor">#1A1B1E</Color>

    <SolidColorBrush x:Key="GraphBackground" Color="{StaticResource GraphBackgroundColor}" />

    <!-- GENERIC DARK THEME BRUSHES -->

    <!-- Text / Foreground -->
    <SolidColorBrush x:Key="ControlForeground" Color="#E6E6E6"/>
    <SolidColorBrush x:Key="ControlForegroundDisabled" Color="#6F6F6F"/>

    <!-- Backgrounds -->
    <SolidColorBrush x:Key="ControlBackground" Color="#2A2B2F"/>
    <SolidColorBrush x:Key="ControlBackgroundDisabled" Color="#1F2023"/>
    <SolidColorBrush x:Key="ControlBackgroundHover" Color="#323338"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="ControlBorder" Color="#3A3D45"/>
    <SolidColorBrush x:Key="ControlBorderHover" Color="#4A4E57"/>
    <SolidColorBrush x:Key="ControlBorderFocused" Color="#5CA0FF"/>
    <SolidColorBrush x:Key="ControlBorderDisabled" Color="#2A2A2A"/>


    <!-- TREEVIEW COLORS-->
    <!-- Background -->
    <LinearGradientBrush x:Key="ExplorerBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#1A1B1E" Offset="0"/>
        <GradientStop Color="#1F2227" Offset="0.5"/>
        <GradientStop Color="#252931" Offset="1"/>
    </LinearGradientBrush>

    <!-- QuestPack = Blue family -->
    <SolidColorBrush x:Key="QuestPackForeground" Color="#9BBEFF"/>
    <SolidColorBrush x:Key="QuestPackBackground" Color="#152033"/>

    <!-- Quest = Teal family -->
    <SolidColorBrush x:Key="QuestForeground" Color="#7FE3D8"/>
    <SolidColorBrush x:Key="QuestBackground" Color="#112725"/>

    <!-- Node = Purple family -->
    <SolidColorBrush x:Key="NodeForeground" Color="#D2B8FF"/>
    <SolidColorBrush x:Key="NodeBackground" Color="#1C1626"/>
    
    <!-- TreeView shared -->
    <SolidColorBrush x:Key="TreeViewItemHoveredBrush" Color="#2A2D33"/>
    <SolidColorBrush x:Key="TreeViewItemSelectedBackgroundBrush" Color="#3A4A63"/>
    <SolidColorBrush x:Key="TreeViewItemBorderBrush" Color="#3A3D45"/>
    <SolidColorBrush x:Key="TreeViewItemForeground" Color="#E6E6E6"/>


    <!-- GRAPH NODES -->

    <!-- StageNode = Indigo -->
    <SolidColorBrush x:Key="StageNodeBorderBrush" Color="#7C82FF"/>
    <SolidColorBrush x:Key="StageNodeBorderBrush_Highlighted" Color="#A5A9FF"/>
    <SolidColorBrush x:Key="StageNodeBackgroundBrush" Color="#1F2233"/>

    <!-- RewardNode = Green -->
    <SolidColorBrush x:Key="RewardNodeBorderBrush" Color="#6EE68A"/>
    <SolidColorBrush x:Key="RewardNodeBorderBrush_Highlighted" Color="#8AFFA8"/>
    <SolidColorBrush x:Key="RewardNodeBackgroundBrush" Color="#1C2A1F"/>

    <!-- CooldownNode = Orange -->
    <SolidColorBrush x:Key="CooldownNodeBorderBrush" Color="#FFB057"/>
    <SolidColorBrush x:Key="CooldownNodeBorderBrush_Highlighted" Color="#FFC98A"/>
    <SolidColorBrush x:Key="CooldownNodeBackgroundBrush" Color="#2A241A"/>

    <!-- RandomizerNode = Cyan -->
    <SolidColorBrush x:Key="RandomizerNodeBorderBrush" Color="#5CD9F7"/>
    <SolidColorBrush x:Key="RandomizerBorderBrush_Highlighted" Color="#8DEBFF"/>
    <SolidColorBrush x:Key="RandomizerNodeBackgroundBrush" Color="#1A2A2F"/>

    <!-- ConditionNode = Gold -->
    <SolidColorBrush x:Key="ConditionNodeBorderBrush" Color="#FFD84D"/>
    <SolidColorBrush x:Key="ConditionNodeBorderBrush_Highlighted" Color="#FFE68A"/>
    <SolidColorBrush x:Key="ConditionNodeBackgroundBrush" Color="#2A2618"/>

    <!-- VisibilityNode = Pink -->
    <SolidColorBrush x:Key="VisibilityNodeBorderBrush" Color="#FF7AB8"/>
    <SolidColorBrush x:Key="VisibilityNodeBorderBrush_Highlighted" Color="#FF9CCD"/>
    <SolidColorBrush x:Key="VisibilityNodeBackgroundBrush" Color="#2A1C25"/>

    <!-- UnknownNode = Gray -->
    <SolidColorBrush x:Key="UnknownNodeBorderBrush" Color="#B5B5B5"/>
    <SolidColorBrush x:Key="UnknownNodeBorderBrush_Highlighted" Color="#D6D6D6"/>
    <SolidColorBrush x:Key="UnknownNodeBackgroundBrush" Color="#2A2A2A"/>


    <!-- OBJECTIVES -->

    <!-- Kill = Red -->
    <SolidColorBrush x:Key="ObjectiveKillBorderBrush" Color="#FF6B6B"/>
    <SolidColorBrush x:Key="ObjectiveKillBorderBrush_Highlighted" Color="#FF8C8C"/>
    <SolidColorBrush x:Key="ObjectiveKillBackgroundBrush" Color="#331E1E"/>

    <!-- Interact = Blue -->
    <SolidColorBrush x:Key="ObjectiveInteractBorderBrush" Color="#5CA0FF"/>
    <SolidColorBrush x:Key="ObjectiveInteractBorderBrush_Highlighted" Color="#8BC0FF"/>
    <SolidColorBrush x:Key="ObjectiveInteractBackgroundBrush" Color="#1E2638"/>

    <!-- Deliver = Purple -->
    <SolidColorBrush x:Key="ObjectiveDeliverBorderBrush" Color="#A07BFF"/>
    <SolidColorBrush x:Key="ObjectiveDeliverBorderBrush_Highlighted" Color="#C4A8FF"/>
    <SolidColorBrush x:Key="ObjectiveDeliverBackgroundBrush" Color="#261F33"/>

    <!-- Obtain = Green -->
    <SolidColorBrush x:Key="ObjectiveObtainBorderBrush" Color="#57C96F"/>
    <SolidColorBrush x:Key="ObjectiveObtaintBorderBrush_Highlighted" Color="#7FEA97"/>
    <SolidColorBrush x:Key="ObjectiveObtainBackgroundBrush" Color="#1C2A1F"/>

    <!-- Explore = Orange -->
    <SolidColorBrush x:Key="ObjectiveExploreBorderBrush" Color="#FFB057"/>
    <SolidColorBrush x:Key="ObjectiveExploreBorderBrush_Highlighted" Color="#FFC98A"/>
    <SolidColorBrush x:Key="ObjectiveExploreBackgroundBrush" Color="#2A241A"/>

    <!-- Spellcast = Violet -->
    <SolidColorBrush x:Key="ObjectiveSpellcastBorderBrush" Color="#B57AFF"/>
    <SolidColorBrush x:Key="ObjectiveSpellcastBorderBrush_Highlighted" Color="#D3A8FF"/>
    <SolidColorBrush x:Key="ObjectiveSpellcastBackgroundBrush" Color="#2A1F33"/>

</ResourceDictionary>
