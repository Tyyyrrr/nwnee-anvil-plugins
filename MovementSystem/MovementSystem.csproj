<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <RootNamespace>MovementSystem</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='All'">
    <OutputPath>$(SharedOutputDirectory)\$(AssemblyName)</OutputPath>
    <PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='PluginsOnly'">
    <OutputPath>$(SharedOutputDirectory)\$(AssemblyName)</OutputPath>
    <PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>
  
  <ItemGroup> <!-- you'll need the binaries in the same directory as this .csproj for development, but NOT in your server's "../anvil/Plugins/YourPlugin/" !-->
    <Reference Include="NWN.Core" Private="false" />
    <Reference Include="NWN.Native" Private="false" />
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="NWN.Anvil" Version="8193.37.2" ExcludeAssets="runtime" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\EasyConfig\EasyConfig.csproj" Private="false" />
    <ProjectReference Include="..\ServerData\ServerData.csproj" Private="false" />
    <ProjectReference Include="..\ExtensionsPlugin\ExtensionsPlugin.csproj" Private="false" />
    <ProjectReference Include="..\CharactersRegistry\CharactersRegistry.csproj" Private="false" />
  </ItemGroup>

</Project>